<% if (post.date) { %>
  <% if (is_post()) { %>
    <div class="<%= class_name %>">
      <i class="fas fa-calendar"></i>
      <%= __('post.title.posted') %> <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, config.date_format) %></time>
    </div>
    <% if (theme.post.show_updated && !post.date.isSame(post.updated, 'date')) { %>
      <div class="<%= class_name %>">
        <i class="fas fa-calendar-check"></i>
        <%= __('post.title.updated') %> <time datetime="<%= date_xml(post.updated) %>" itemprop="dateModified"><%= date(post.updated, config.date_format) %></time>
      </div>
    <% } %>
   |
    <i class="far fa-file-word fa-fw"></i>
    文章字数:<span class="post-count"><%= wordcount(post.content) %></span>
    |
    <i class="far fa-clock fa-fw"></i>
    阅读时长:<span class="post-count"><%= min2read(post.content) %></span>min
| <!--
<script async src="https://busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script>
    <i class="far fa-eye fa-fw"></i>
    <span > 阅读次数:<span id="busuanzi_value_site_pv"></span>次</span>
-->
  <% } else { %>
    <div class="<%= class_name %>">
      <% if (is_home() && theme.posts_overview.sort_updated || is_archive() && theme.archive.sort_updated ) { %>
        <time datetime="<%= date_xml(post.updated) %>" itemprop="dateModified"><%= date(post.updated, config.date_format) %></time>
      <% } else { %>
        <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, config.date_format) %></time>
      <% } %>
    </div>
  <% } %>
<% } %>
